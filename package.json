{
  "name": "ReactNativePromo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "env:local": "node ./src/env/set-env.js local",
    "env:dev": "node ./src/env/set-env.js dev",
    "env:prod": "node ./src/env/set-env.js prod",
    "android": "yarn android:clean && react-native run-android",
    "android:local": "yarn env:local && yarn android",
    "android:dev": "yarn env:dev && yarn android",
    "android:prod": "yarn env:prod && yarn android",
    "android:build": "yarn env:prod && yarn android:clean && npx jetify && cd android && ./gradlew bundleRelease && cd .. && mv ./android/app/build/outputs/bundle/release/app-release.aab ./builds/release.aab",
    "android:build:run": "rm -f ./builds/bundle.apks && bundletool build-apks --connected-device --bundle=./builds/release.aab --output=./builds/bundle.apks && bundletool install-apks --apks=./builds/bundle.apks",
    "android:apk": "yarn env:dev && yarn android:clean && npx jetify && cd android && ./gradlew assembleRelease && cd .. && mv ./android/app/build/outputs/apk/release/app-release.apk ./builds/demo.apk",
    "android:clean": "cd android && ./gradlew clean && cd ..",
    "android:wrapper": "cd android && gradle wrapper && cd ..",
    "android:prepare": "yarn install && yarn android:wrapper && yarn android:perm && yarn android:prod",
    "android:perm": "chmod +x ./android/gradlew && chmod +x ./android/gradlew.bat",
    "android:kill": "adb -s emulator-5554 emu kill",
    "android:codepush": "appcenter codepush release-react -a Team/ReactNativePromo-android -d Production",
    "android:codepush:gen": "appcenter codepush deployment add -a Team/ReactNativePromo-android Production",
    "ios:codepush": "appcenter codepush release-react -a Team/ReactNativePromo-ios -d Production",
    "ios:codepush:gen": "appcenter codepush deployment add -a Team/ReactNativePromo-ios Production",
    "iox": "npx react-native run-ios",
    "ios": "npx react-native run-ios --simulator=\"iPhone 5s\"",
    "ios:local": "yarn env:local && yarn ios",
    "ios:dev": "yarn env:dev && yarn ios",
    "ios:prod": "yarn env:prod && yarn ios",
    "ios:pod": "rm -rf ios/Pods ios/Podfile.lock && npx pod-install",
    "ios:prepare": "yarn install && yarn ios:pod && yarn ios:prod",
    "ios:devices": "xcrun instruments -s devices",
    "ios:derived": "rm -rf ~/Library/Developer/Xcode/DerivedData",
    "start": "yarn env:prod && react-native start --reset-cache",
    "test": "jest",
    "test:u": "jest --updateSnapshot",
    "test:c": "jest --clearCache",
    "lint": "eslint .",
    "postinstall": "jetifier -r && yarn postfix:firebase",
    "postfix:firebase": "sed -i -- 's/fetchCompletionHandler(fetchResult);/@try {fetchCompletionHandler(fetchResult) ;} @catch (NSException * e) {};/g' ./node_modules/react-native-firebase/ios/RNFirebase/notifications/RNFirebaseNotifications.m && sed -i -- 's/completionHandler();/@try {completionHandler() ;} @catch (NSException * e) {};/g' ./node_modules/react-native-firebase/ios/RNFirebase/notifications/RNFirebaseNotifications.m",
    "api": "lt -h 'http://serverless.social' -p 5003 --subdomain pmk-promocase",
    "rename": "react-native-rename \"PromoCase\" -b com.pmk.promocase",
    "fkill": "fkill -f -s node.exe && fkill -f -s java.exe",
    "reinstall": "rm -rf yarn.lock node_modules && yarn install",
    "i": "yarn install"
  },
  "dependencies": {
    "@pmk-team/common": "^1.0.100",
    "@react-native-community/async-storage": "^1.7.1",
    "@react-native-community/datetimepicker": "^3.0.4",
    "@react-native-community/masked-view": "^0.1.7",
    "@react-native-community/picker": "^1.8.0",
    "@react-native-community/progress-bar-android": "^1.0.3",
    "@react-native-community/progress-view": "^1.1.0",
    "@react-navigation/bottom-tabs": "^5.2.2",
    "@react-navigation/drawer": "^5.9.0",
    "@react-navigation/material-top-tabs": "^5.1.4",
    "@react-navigation/native": "^5.1.1",
    "@react-navigation/stack": "^5.2.3",
    "@reduxjs/toolkit": "^1.5.0",
    "axios": "^0.19.2",
    "axios-logger": "^2.3.1",
    "formik": "^2.1.3",
    "install": "^0.13.0",
    "react": "16.13.1",
    "react-native": "^0.63.4",
    "react-native-camera": "^3.40.0",
    "react-native-code-push": "^7.0.0",
    "react-native-device-info": "^8.0.1",
    "react-native-dropdownalert": "^4.2.1",
    "react-native-fast-image": "^8.3.2",
    "react-native-file-viewer": "^2.1.4",
    "react-native-firebase": "^5.6.0",
    "react-native-fs": "^2.16.6",
    "react-native-gesture-handler": "^1.10.0",
    "react-native-image-picker": "2.3.4",
    "react-native-image-zoom-viewer": "^3.0.1",
    "react-native-keyboard-spacer": "^0.4.1",
    "react-native-masked-text": "^1.13.0",
    "react-native-modal-datetime-picker": "^9.1.0",
    "react-native-paper": "^4.7.1",
    "react-native-pdf": "^6.2.0",
    "react-native-picker-modal-view": "^1.3.2",
    "react-native-picker-select": "^8.0.0",
    "react-native-popover-view": "^3.1.1",
    "react-native-progress-circle": "^2.1.0",
    "react-native-reanimated": "^1.7.0",
    "react-native-render-html": "^4.2.4",
    "react-native-safe-area-context": "^0.7.3",
    "react-native-screens": "^2.4.0",
    "react-native-snap-carousel": "^3.9.0",
    "react-native-tab-view": "^2.13.0",
    "react-native-vector-icons": "^7.0.0",
    "react-native-webview": "^10.10.2",
    "react-native-youtube": "^2.0.1",
    "react-redux": "^7.1.3",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "rn-fetch-blob": "^0.12.0",
    "uuidv4": "^5.0.1",
    "yup": "^0.28.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^25.1.1",
    "@types/react": "^16.9.49",
    "@types/react-native": "0.63.40",
    "@types/react-native-htmlview": "^0.12.2",
    "@types/react-native-keyboard-spacer": "^0.4.1",
    "@types/react-native-snap-carousel": "^3.8.1",
    "@types/react-native-vector-icons": "^6.4.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-test-renderer": "^16.9.2",
    "@types/yup": "^0.26.31",
    "babel-jest": "^26.2.2",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.6.0",
    "jest": "^26.2.2",
    "jetifier": "^1.6.5",
    "metro-react-native-babel-preset": "^0.61.0",
    "react-test-renderer": "16.13.1",
    "typescript": "^4.1.5"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jest/setup.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!native-base)/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>/jest/assetsTransformer.js"
    }
  }
}
