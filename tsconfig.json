{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "assets": ["./assets"],
      "components": ["./components"],
      "hooks": ["./hooks"],
      "services": ["./services"],
      "utils": ["./utils"],
      "types": ["./types"],
      "store": ["./store"],
      "modules": ["./modules"],
      "env": ["./env"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
